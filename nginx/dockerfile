# Etapa 1: construir el frontend
FROM node:20-alpine AS builder
WORKDIR ./ 
COPY frontend/package*.json ./
RUN npm install
COPY frontend ./
RUN npm run build


FROM nginx:latest

# Instalar openssl
RUN apt-get update && apt-get install -y openssl && rm -rf /var/lib/apt/lists/*

# Crear carpeta para los certificados
RUN mkdir -p /etc/nginx/ssl

# Copiar configuraci√≥n de nginx
COPY nginx/nginx.conf /etc/nginx/conf.d/default.conf

# Copiar script de generaci√≥n de certificados
COPY nginx/generate-cert.sh /docker-entrypoint.d/generate-cert.sh

# Asegurarse de que el script sea ejecutable
RUN chmod +x /docker-entrypoint.d/generate-cert.sh

# # Copiar los archivos del frontend
# COPY ../frontend/dist /usr/share/nginx/html

# üí° ESTA L√çNEA ES CLAVE:
COPY --from=builder /app/dist /usr/share/nginx/html
